{
  "extends": [
      "group:allNonMajor"
  ],
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
      {
          "fileMatch": [
              "(^|/)argfile",
              "(^|/)rpms\\.in\\.yaml"
          ],
          "customType": "regex",
          "datasourceTemplate": "docker",
          "matchStrings": [
              "(?<depName>[\\w\\.\\/]+):?(?<currentValue>[\\w]+)?@(?<currentDigest>sha256:[a-f0-9]+)"
          ],
          "versioningTemplate": "docker"
      }
  ]
}